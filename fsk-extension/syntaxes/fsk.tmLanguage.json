{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Fsk",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#types"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.fsk",
                    "match": "//.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.fsk",
                    "match": "\\b(fn|let|const|if|else|while|return|class|import|print|new)\\b"
                },
                {
                    "name": "constant.language.boolean.fsk",
                    "match": "\\b(true|false|null)\\b"
                },
                {
                    "name": "variable.language.this.fsk",
                    "match": "\\b(this|super)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.fsk",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.fsk",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.fsk",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.fsk",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.fsk",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.fsk"
                        }
                    }
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "entity.name.type.class.fsk",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    },
    "scopeName": "source.fsk"
}